{
	"name": "nmos",
	"private": true,
	"version": "0.0.1",
	"description": "NMOS",
	"main": "./build/index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "rimraf build && tsc",
		"dev": "DEBUG_WRITE_TO_FILE=1  nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/main.ts",
		"submodules": "git submodule init && git submodule update",
		"release": "release-it",
		"tool:generate": "bun ./tools/generate.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/nmos.git"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/bitfocus/nmos/issues"
	},
	"release-it": {
		"github": {
			"release": false
		},
		"git": {
			"commitMessage": "Release v${version}",
			"requireBranch": [
				"main",
				"master"
			],
			"tagName": "v${version}"
		},
		"npm": {
			"publish": false
		}
	},
	"homepage": "https://github.com/bitfocus/nmos#readme",
	"devDependencies": {
		"@tsconfig/node18": "^18.2.2",
		"@types/node": "^18.18.14",
		"json-schema-to-typescript": "^13.1.1",
		"nodemon": "^3.0.1",
		"prettier": "^3.1.0",
		"release-it": "15",
		"rimraf": "^5.0.5",
		"ts-node": "^10.9.1",
		"typescript": "~5.2"
	}
}
